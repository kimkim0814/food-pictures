<div class ="back">
  <div class="content_show" style="background-image: url(<%= @post.image %>);">
      <% if user_signed_in? && current_user.id == @post.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">

        <li>
          <%= link_to '編集', "/posts/#{@post.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/posts/#{@post.id}", method: :delete %>
        </li>
      </ul>
    </div>
      <% end %>
  <div class= "like-function">
    <% if current_user.already_liked?(@post) %>
      <%= link_to post_like_path(@post), method: :delete do %>
      <i class= "fas fa-heart"> <%= @post.likes.count %></i>
        <% end %>
    <% else %>
      <%= link_to post_likes_path(@post), method: :post do %>
       <i class= "far fa-heart"> <%= @post.likes.count %></i>
        <% end %>
    <% end %>
</div>
    <%= simple_format(@post.name) %>
    <span class="name"><%= @post.name %>
    </span>
  </div>
    <div class="container">
      <%= form_with(model: [@post, @comment], local: true) do |form| %>
        <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= form.submit "SEND" %>
      <% end %>
 
      <div class="comments">
      <h4>＜コメント一覧＞</h4>
       <div class="comment-box">
      <% if @comments %>
        <% @comments.each do |comment| %>

          <p>
            会員番号<%=comment.user_id %>番さん
            <%= comment.text %>
          </p>

        <% end %>
      <% end %>
         <div>
    </div>
  </div>
</div>